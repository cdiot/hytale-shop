{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}

    <div class="row pt-5">
        <div class="col-md-5">
            <img src="{{ asset('/uploads/' ~ product.illustration) }}" alt="{{ product.name}}" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h1>{{product.name}}</h1>
            <p>{{product.subtitle}}</p>
            <span>{{(product.price /100)| number_format(2, ',', '.')}} &euro;</span>
            <hr>
            <p>
                {{product.description}}
            </p>
            <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

{% endblock %}
